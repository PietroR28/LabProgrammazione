<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="play.controller.LoginController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1"/>
    <Button text="Login" onAction="#handleLogin" GridPane.rowIndex="2"/>
    <Label fx:id="statusLabel" GridPane.rowIndex="3"/>
</GridPane>