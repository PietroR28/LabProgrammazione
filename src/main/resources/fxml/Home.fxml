<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="play.controller.HomeController"
      alignment="CENTER" spacing="20" stylesheets="@../styles.css" styleClass="vbox"
      prefWidth="800" prefHeight="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel" styleClass="title"/>
    <Label text="Scegli una categoria di esercizi:" styleClass="subtitle"/>

    <!-- Primo esercizio con progress bar e stato sempre visibili -->
    <VBox spacing="8" alignment="CENTER" styleClass="exercise-container">
        <Button text="Trova l'errore" onAction="#handleExercise1" styleClass="button" prefWidth="250"/>
        <ProgressBar fx:id="progressBar1" prefWidth="220" prefHeight="12" styleClass="progress-bar"/>
        <Label fx:id="statusLabel1" text="Non iniziato" styleClass="status-label"/>
    </VBox>

    <!-- Secondo esercizio con progress bar e stato sempre visibili -->
    <VBox spacing="8" alignment="CENTER" styleClass="exercise-container">
        <Button text="Ordina il codice" onAction="#handleExercise2" styleClass="button" prefWidth="250"/>
        <ProgressBar fx:id="progressBar2" prefWidth="220" prefHeight="12" styleClass="progress-bar"/>
        <Label fx:id="statusLabel2" text="Non iniziato" styleClass="status-label"/>
    </VBox>

    <!-- Terzo esercizio con progress bar e stato sempre visibili -->
    <VBox spacing="8" alignment="CENTER" styleClass="exercise-container">
        <Button text="Completa il codice" onAction="#handleExercise3" styleClass="button" prefWidth="250"/>
        <ProgressBar fx:id="progressBar3" prefWidth="220" prefHeight="12" styleClass="progress-bar"/>
        <Label fx:id="statusLabel3" text="Non iniziato" styleClass="status-label"/>
    </VBox>

    <Button text="Logout" onAction="#handleLogout"
            style="-fx-background-color: red; -fx-text-fill: white;"/>
</VBox>