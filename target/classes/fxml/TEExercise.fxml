<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>

<!--
    File FXML per la schermata dell'esercizio "Trova l'errore".

    Questa interfaccia grafica fornisce:
    - Visualizzazione della domanda e del codice tramite TextFlow;
    - Tre RadioButton per la selezione della risposta;
    - Pulsanti per navigare tra le domande, concludere l'esercizio o uscire;
    - Visualizzazione del timer in alto.

    Gli elementi sono collegati al controller TrovaErroreController,
    che si occupa di gestire la logica dell'esercizio, la navigazione e il salvataggio delle risposte.
-->

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="play.controller.TrovaErroreController"
      alignment="CENTER" spacing="20" stylesheets="@../styles.css" styleClass="vbox"
      prefWidth="800" prefHeight="600">    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="timerLabel" text="Tempo: 00:00" style="-fx-font-weight: bold; -fx-padding: 5px; -fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" alignment="CENTER"/>
    
    <TextFlow fx:id="exerciseQuestion" styleClass="title"/>
    <TextFlow fx:id="exerciseCode" styleClass="code-area" style="-fx-background-color: white;"/>
    
    <VBox spacing="10" alignment="CENTER">
        <RadioButton fx:id="answerA" text=""/>
        <RadioButton fx:id="answerB" text=""/>
        <RadioButton fx:id="answerC" text=""/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Domanda precedente" onAction="#handlePreviousQuestion" styleClass="button"/>
        <Button text="Domanda successiva" onAction="#handleNextQuestion" styleClass="button"/>
        <Button fx:id="finishExerciseButton" text="Concludi Esercizio" onAction="#handleFinishExercise" styleClass="button" visible="false"/>
        <Button text="Esci dall'esercizio" onAction="#handleExitExercise" styleClass="button" style="-fx-background-color: red; -fx-text-fill: white;"/>
    </HBox>
</VBox>